mixin carCard(photo, photo2, photo3, location, name, complectation, year, color, engine, run, transm, price, credit, special)
  +b.car-card.swiper-slide
    +e.item-box
      +e.car-photos.swiper-container.js-carCardSwiper
        .swiper-wrapper
          +e.photo.swiper-slide
            IMG(src= photo)
          +e.photo.swiper-slide
            IMG(src= photo2)
          +e.photo.swiper-slide
            IMG(src= photo3)
        A.swiper-pagination.swiper-pagination-bullets
        A.swiper-scrollbar
      +e.location= location
      +e.car-name= name
      +e.car-complectation= complectation
      +e.car-tth
        +e.tth-element
          +e.tth-ico
            SVG
              USE(xlink:href="../img/spritemap.svg#card_year")
          +e.tth-value= year
        +e.tth-element
          +e.tth-ico
            SVG
              USE(xlink:href="../img/spritemap.svg#card_colors")
          +e.tth-value= color
        +e.tth-element
          +e.tth-ico
            SVG
              USE(xlink:href="../img/spritemap.svg#card_engin_volume")
          +e.tth-value= engine
        +e.tth-element
          +e.tth-ico
            SVG
              USE(xlink:href="../img/spritemap.svg#card_run")
          +e.tth-value= run
        +e.tth-element
          +e.tth-ico
            SVG
              USE(xlink:href="../img/spritemap.svg#card_transmission")
          +e.tth-value= transm
      +e.car-prices
        if special
          +e.price-box
            +e.price-name Спецпредложение:
            +e.price-count= special
          +e.just-price.css-price
            +e.price-name Начальная цена:
            +e.price-count= price
        else
          +e.price-box.css-price
            +e.price-name Цена:
            +e.price-count= price
      +e.btns
        +e.BUTTON.button-offer.btn Зарезервировать автомобиль
        +e.BUTTON.button-credit.btn Купить в кредит от
          SPAN= credit
